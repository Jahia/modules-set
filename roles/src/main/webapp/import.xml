<?xml version="1.0" encoding="ISO-8859-1"?>
<content xmlns:jcr="http://www.jcp.org/jcr/1.0"
         xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jnt="http://www.jahia.org/jahia/nt/1.0"
         xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:jmix="http://www.jahia.org/jahia/mix/1.0"
         xmlns:nt="http://www.jcp.org/jcr/nt/1.0">

    <permissions jcr:primaryType="jnt:permission">
        <admin jcr:primaryType="jnt:permission">
            <administrationAccess jcr:primaryType="jnt:permission"/>
            <adminVirtualSites jcr:primaryType="jnt:permission"/>
            <adminPortlets jcr:primaryType="jnt:permission"/>
            <adminEmailSettings jcr:primaryType="jnt:permission"/>
            <adminRootUser jcr:primaryType="jnt:permission"/>
            <adminCache jcr:primaryType="jnt:permission"/>
            <adminServerPermissions jcr:primaryType="jnt:permission"/>
            <adminPasswordPolicy jcr:primaryType="jnt:permission"/>
            <adminPatches jcr:primaryType="jnt:permission"/>
            <adminIssueTracking jcr:primaryType="jnt:permission"/>
            <adminDocumentation jcr:primaryType="jnt:permission"/>
            <adminAbout jcr:primaryType="jnt:permission"/>
            <adminUsers jcr:primaryType="jnt:permission"/>
            <adminGroups jcr:primaryType="jnt:permission"/>
            <adminSiteLanguages jcr:primaryType="jnt:permission"/>
            <adminHtmlSettings jcr:primaryType="jnt:permission"/>
            <adminAnalytics jcr:primaryType="jnt:permission"/>
            <adminUrlmapping jcr:primaryType="jnt:permission"/>
            <adminTemplates jcr:primaryType="jnt:permission"/>
        </admin>

        <studioMode jcr:primaryType="jnt:permission">
            <studioModeAccess jcr:primaryType="jnt:permission"/>
        </studioMode>

        <editMode jcr:primaryType="jnt:permission">
            <editModeAccess jcr:primaryType="jnt:permission"/>
            <selector jcr:primaryType="jnt:permission">
                <categoriesSelector jcr:primaryType="jnt:permission"/>
                <contentSelector jcr:primaryType="jnt:permission"/>
                <createSelector jcr:primaryType="jnt:permission"/>
                <filesAndImagesSelector jcr:primaryType="jnt:permission"/>
                <latestSelector jcr:primaryType="jnt:permission"/>
                <portletsSelector jcr:primaryType="jnt:permission"/>
                <searchSelector jcr:primaryType="jnt:permission"/>
                <sitemapSelector jcr:primaryType="jnt:permission"/>
                <templatesSelector jcr:primaryType="jnt:permission"/>
            </selector>

            <engineTabs jcr:primaryType="jnt:permission">
                <viewAnalyticsTab jcr:primaryType="jnt:permission"/>
                <viewCategoriesTab jcr:primaryType="jnt:permission"/>
                <viewContentTab jcr:primaryType="jnt:permission"/>
                <viewLayoutTab jcr:primaryType="jnt:permission"/>
                <viewMetadataTab jcr:primaryType="jnt:permission"/>
                <viewOptionsTab jcr:primaryType="jnt:permission"/>
                <viewRolesTab jcr:primaryType="jnt:permission"/>
                <viewSeoTab jcr:primaryType="jnt:permission"/>
                <viewTagsTab jcr:primaryType="jnt:permission"/>
                <viewUsagesTab jcr:primaryType="jnt:permission"/>
                <viewWorkflowTab jcr:primaryType="jnt:permission"/>
                <viewPublicationTab jcr:primaryType="jnt:permission"/>
                <viewHistoryTab jcr:primaryType="jnt:permission"/>
                <viewVersioningTab jcr:primaryType="jnt:permission"/>
            </engineTabs>
        </editMode>

        <contributeMode jcr:primaryType="jnt:permission">
            <contributeModeAccess jcr:primaryType="jnt:permission"/>
        </contributeMode>

        <managers jcr:primaryType="jnt:permission">
            <categoryManager jcr:primaryType="jnt:permission"/>
            <contentManager jcr:primaryType="jnt:permission"/>
            <fileManager jcr:primaryType="jnt:permission"/>
            <portletManager jcr:primaryType="jnt:permission"/>
            <siteManager jcr:primaryType="jnt:permission"/>
            <tagManager jcr:primaryType="jnt:permission"/>
        </managers>

        <workflow-tasks jcr:primaryType="jnt:permission">
            <first-review jcr:primaryType="jnt:permission"/>
            <final-review jcr:primaryType="jnt:permission"/>
        </workflow-tasks>

        <wysiwyg-editor-toolbar jcr:primaryType="jnt:permission">
            <full jcr:primaryType="jnt:permission"/>
            <basic jcr:primaryType="jnt:permission"/>
            <light jcr:primaryType="jnt:permission"/>
        </wysiwyg-editor-toolbar>

        <jobs jcr:primaryType="jnt:permission">
            <view-all-jobs jcr:primaryType="jnt:permission"/>
        </jobs>

        <actions jcr:primaryType="jnt:permission"/>
    </permissions>

    <roles jcr:primaryType="jnt:roles" >
        <visitor jcr:primaryType="jnt:role"
                 j:permissions="/permissions/repository-permissions/jcr:all_live/jcr:read_live" />

        <viewer jcr:primaryType="jnt:role"
                 j:permissions="/permissions/repository-permissions/jcr:all_default/jcr:read_default" />

        <editor jcr:primaryType="jnt:role"
                j:permissions="/permissions/repository-permissions/jcr:all_default /permissions/editMode /permissions/contributeMode /permissions/managers/fileManager /permissions/managers/portletManager /permissions/managers/siteManager  /permissions/wysiwyg-editor-toolbar/full"
                />
                <!-- modes/contribute actions/*  languages/* "/>-->

        <contributor     jcr:primaryType="jnt:role"
                         j:permissions="/permissions/repository-permissions/jcr:all_default /permissions/contributeMode"/>

        <publisher jcr:primaryType="jnt:role"
                   j:permissions="/permissions/repository-permissions/jcr:all_default/jcr:read_default /permissions/editMode/editModeAccess /permissions/editMode/selector/sitemapSelector /permissions/modes/contribute /permissions/toolbar/workflow /permissions/workflow-tasks/final-review" />

        <!--<seo-manager jcr:primaryType="jnt:role"-->
                     <!--/>-->
        <live-contributor jcr:primaryType="jnt:role"
                          j:permissions="/permissions/repository-permissions/jcr:all_live/jcr:versionManagement_live /permissions/repository-permissions/jcr:all_live/jcr:readAccessControl_live /permissions/repository-permissions/jcr:all_live/jcr:write_live/jcr:addChildNodes_live /permissions/repository-permissions/jcr:all_live/jcr:nodeTypeManagement_live" />


        <site-administrator jcr:primaryType="jnt:role" j:nodeTypes="jnt:virtualsite"
                            j:permissions="/permissions/repository-permissions/jcr:all_default /permissions/editMode /permissions/contributeMode /permissions/managers /permissions/wysiwyg-editor-toolbar"
                            />

        <!--<translator jcr:primaryType="jnt:role"/>-->

        <!--<web-designer jcr:primaryType="jnt:role"/>-->
        <!--<server-content-manager jcr:primaryType="jnt:role"/>-->

        <!--<security-advisor jcr:primaryType="jnt:role" />-->

        <!--<webmaster jcr:primaryType="jnt:role" />-->

        <!--<administrator jcr:primaryType="jnt:role" j:nodeTypes="rep:root"-->
                 <!--j:permissions="/permissions" />-->

        <owner jcr:primaryType="jnt:role"
                 j:permissions="/permissions/repository-permissions/jcr:all_default /permissions/repository-permissions/jcr:all_live /permissions/actions" />

    </roles>

</content>