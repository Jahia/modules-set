<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean name="baseWrappingController" class="org.springframework.web.servlet.mvc.ServletWrappingController" abstract="true" depends-on="guiceInitializer"/>
	
    <bean name="xml-to-html" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.GadgetRenderingServlet"/>
    </bean>
    <bean name="proxy" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.ProxyServlet"/>
    </bean>
    <bean name="makeRequest" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.MakeRequestServlet"/>
    </bean>
    <bean name="concat" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.ConcatProxyServlet"/>
    </bean>
    <bean name="oauthCallback" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.OAuthCallbackServlet"/>
    </bean>
    <bean name="metadata" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.RpcServlet"/>
    </bean>
    <bean name="js" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.gadgets.servlet.JsServlet"/>
    </bean>
    <bean name="socialRestapiServlet" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.protocol.DataServiceServlet"/>
        <property name="initParameters">
            <props>
                <prop key="handlers">org.apache.shindig.social.handlers</prop>
            </props>
        </property>
    </bean>
    <bean name="socialJsonRpcServlet" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.protocol.JsonRpcServlet"/>
        <property name="initParameters">
            <props>
                <prop key="handlers">org.apache.shindig.social.handlers</prop>
            </props>
        </property>
    </bean>
    <bean name="gadgetsJsonRpcServlet" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.protocol.JsonRpcServlet"/>
        <property name="initParameters">
            <props>
                <prop key="handlers">org.apache.shindig.gadgets.handlers</prop>
            </props>
        </property>
    </bean>
    <bean name="gadgetsRestapiServlet" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.protocol.DataServiceServlet"/>
        <property name="initParameters">
            <props>
                <prop key="handlers">org.apache.shindig.gadgets.handlers</prop>
            </props>
        </property>
    </bean>
    <bean name="sampleOAuth" parent="baseWrappingController">
        <property name="servletClass" value="org.apache.shindig.social.sample.oauth.SampleOAuthServlet"/>
    </bean>

    <bean name="shindigControllerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <entry key="/modules/shindig/gadgets/js/**" value-ref="js"/>
                <entry key="/gadgets/proxy/**" value-ref="proxy"/>
                <entry key="/gadgets/makeRequest" value-ref="makeRequest"/>
                <entry key="/gadgets/api/rpc/**" value-ref="gadgetsJsonRpcServlet"/>
                <entry key="/gadgets/api/rest/**" value-ref="gadgetsRestapiServlet"/>
                <entry key="/gadgets/concat" value-ref="concat"/>
                <entry key="/gadgets/oauthcallback" value-ref="oauthCallback"/>
                <entry key="/modules/shindig/gadgets/ifr" value-ref="xml-to-html"/>
                <entry key="/gadgets/metadata" value-ref="metadata"/>
                
                <entry key="/social/rest/**" value-ref="socialRestapiServlet"/>
                <entry key="/social/rpc/**" value-ref="socialJsonRpcServlet"/>

                <entry key="/oauth/**" value-ref="sampleOAuth"/>
            </map>
        </property>
    </bean>

</beans>
